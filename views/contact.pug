extends layout-dark

block content
  div(style="background-color:#fff;margin-top:-100px;height:100px")
  
  .register-page
    .container
      .row
        .col-12.col-lg-6(style="padding-right:3rem;")
          h4 Contact Us
          h6 We’re here to help when you need us. Our 24/7 live chat support is ready to answer your questions. You can also send us an email, and we’ll answer within 24 hours.
          br
          br
          h4 24/7 Helpdesk Support
          p Phone : 021 – 5276616<br/>SMS : 0819 8 54321<br/>WhatsApp : 0812 8691 1930<br/>Email : <a style="color:#444;" href="mailto:helpdesk@jkt.nusa.net.id">helpdesk@jkt.nusa.net.id</a>
          
        .col-12.col-lg-6
          form(method='POST', action='/contact')
              div.form-group
                label(for='name') Name:
                input#name.form-control(type='text', placeholder='Full Name' name='name')
              div.form-group
                label(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
              div.form-group
                label(for='phone') Phone:
                input#phone.form-control(type='phone', placeholder='021++++++' name='phone')
              div.form-group
                label(for='message') Message:
                textarea#message.form-control(rows="5" name="someTextArea")
              input.btn.btn-primary(class='nusa-button', type='submit',value='SUBMIT')
          
  div(class="nusanet-newsletter-wrapper")
      div(class="row align-items-center nusanet-newsletter")
        div(class="col-12 col-sm-6")
          div(class="row align-items-center")
            div(class="col-md-3")
              img(src="/images/newsletter-image2.png" width="100px")
            div(class="col-12 col-md-9 newsletter-tagline")
              h5 Stay informed
              p(style="opacity:0.6") Get the latest news and special promotion from Nusanet
        div(class="col-12 col-sm-6 text-center")
          form(method="post", action='/subscribe/add')
            div(class="row m-0")
              div(class="col-12 col-lg-8 p-0")
                input(type="email", class="nusanet-subscribe-form", id="email", name="email", placeholder="Email", style="width:100% !important;")
              div(class="col-12 col-lg-4 p-0")
                input(type="submit", id="submit", name="submit", class="nusa-button-blue nusanet-subscribe-button hoverable", value="SUBSCRIBE", style="width:100% !important;")